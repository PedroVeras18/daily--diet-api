generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  meals    Meal[]
}

model Meal {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  isAtDiet    Boolean?
  createdAt   DateTime @default(now())

  userId      Int
  user        User @relation(fields: [userId], references: [id])
}
